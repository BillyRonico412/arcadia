generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Utilisateur {
  id     Int    @id @default(autoincrement())
  uid    String @unique
  nom    String
  prenom String
}

model Role {
  id    Int    @id @default(autoincrement())
  label String
}

model Service {
  id          Int    @id @default(autoincrement())
  nom         String
  description String
}

model Image {
  id       Int       @id @default(autoincrement())
  url      String
  habitats Habitat[] @relation("HabitatImage")
  animaux  Animal[]  @relation("AnimalImage")
}

model Habitat {
  id          Int      @id @default(autoincrement())
  nom         String
  description String
  animaux     Animal[] @relation("HabitatAnimal")
  images      Image[]  @relation("HabitatImage")
}

model Animal {
  id        Int       @id @default(autoincrement())
  prenom    String
  race      String
  images    Image[]   @relation("AnimalImage")
  habitatId Int
  habitat   Habitat   @relation("HabitatAnimal", fields: [habitatId], references: [id])
  rapports  Rapport[] @relation("AnimalRapport")
}

model Rapport {
  id         Int      @id @default(autoincrement())
  etat       String
  nourriture String
  grammage   Int
  date       DateTime
  detail     String?
  animal     Animal   @relation("AnimalRapport", fields: [animalId], references: [id])
  animalId   Int
}

model Avis {
  id          Int     @id @default(autoincrement())
  pseudo      String
  commentaire String
  isVisible   Boolean
}
